  <!-- Your Map Script -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const map = L.map('map').setView([28.6139, 77.2088], 13);

      L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '© OpenStreetMap',
      }).addTo(map);

